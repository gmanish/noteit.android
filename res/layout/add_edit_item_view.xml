<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addedit_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip" >
	
	<TextView
	    android:id="@+id/addedit_textview_caption"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginBottom="10dip"
	    android:text="@string/addedit_Title"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<AutoCompleteTextView
	    android:id="@+id/addedit_editName"
	    style="@style/AddEdit_WidgetHeight"
	    android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/addedit_textview_caption"
        android:hint="@string/addedit_Name_Hint" />
   
	<LinearLayout
       android:id="@+id/addedit_updowncontrol"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/addedit_editName"
       android:layout_marginBottom="5dp" 
       android:gravity="center_vertical"
  	   android:orientation="horizontal">

		<Button
		    android:id="@+id/addedit_btndecrement"
		    style="@style/AddEdit_WidgetHeight"
		    android:layout_width="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:layout_weight="0.1"
		    android:focusable="false"
		    android:text="-" />
        
		<EditText
		    android:id="@+id/addedit_txtQuantity"
		    style="@style/AddEdit_WidgetHeight"
		    android:layout_width="wrap_content"
		    android:minWidth="90dp"
		    android:layout_weight="0.4"
		    android:layout_alignParentTop="true"
		    android:inputType="numberDecimal"
		    android:hint="@string/addedit_quantity" />
		
		<Button
		    android:id="@+id/addedit_btnIncrement"
		    style="@style/AddEdit_WidgetHeight"
		    android:layout_width="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_weight="0.1"
		    android:layout_toLeftOf="@+id/addedit_units"
		    android:focusable="false"
		    android:text="+" />

	    <Spinner
	        android:id="@+id/addedit_units"
		    style="@style/AddEdit_WidgetHeight"
	        android:layout_width="wrap_content"
		    android:layout_weight="0.4"
	        android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true" />
	    		
	</LinearLayout>

	<EditText
	    android:id="@+id/addedit_editprice"
	    style="@style/AddEdit_WidgetHeight"
	    android:layout_width="match_parent"
	    android:layout_below="@+id/addedit_updowncontrol"
	    android:inputType="numberDecimal" 
	    android:layout_marginBottom="5dp" 
	    android:hint="@string/addedit_price"/>
	
	<TextView
	    android:id="@+id/textView4"
	    style="@style/AddEdit_TextViewStyle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/addedit_editprice"
	    android:layout_marginBottom="2dp"
	    android:text="@string/addedit_category" />
		    
	<Spinner
	    android:id="@+id/addedit_spinCategories"
	    style="@style/AddEdit_WidgetHeight"
	    android:layout_width="match_parent"
	    android:layout_below="@+id/textView4"
	    android:layout_marginBottom="5dp" />

	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/addedit_spinCategories"
	    android:gravity="right"
	    android:layout_marginTop="10dp">
		
		<Button
		    android:id="@+id/addedit_btnContinue"
		    style="@style/App_TextButtonStyle"
		    android:text="@string/addedit_Continue" />

		<Button
		    android:id="@+id/addedit_btnDone"
		    style="@style/App_TextButtonStyle"
		    android:text="@string/addedit_Done" />
		
	</LinearLayout>

</RelativeLayout>