<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addedit_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip">
	
	<LinearLayout
		android:id="@+id/addedit_titlebar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dip"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		
		<TextView
		    android:id="@+id/addedit_textview_caption"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_weight="1"
		    android:text="@string/addedit_Title"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<ImageButton
	        android:id="@+id/addedit_btnPrev"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|right"
	        android:src="@drawable/left"
	        style="@style/App_ButtonStyle" />

		<ImageButton
		    android:id="@+id/addedit_btnNext"
		    style="@style/App_ButtonStyle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/right" />
		
	</LinearLayout>
	
	<AutoCompleteTextView
	    android:id="@+id/addedit_editName"
	    style="@style/AddEdit_Widget"
	    android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/addedit_titlebar"/>
   
	<TextView
	    android:id="@+id/addedit_labelQuantity"
	    style="@style/AddEdit_TextViewStyle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/addedit_editName"
	    android:layout_marginBottom="2dp"
	    android:text="@string/addedit_quantity" />
	
	<LinearLayout
       android:id="@+id/addedit_updowncontrol"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/addedit_labelQuantity"
       android:layout_marginBottom="5dp" 
       android:gravity="center_vertical"
  	   android:orientation="horizontal">

		<Button
		    android:id="@+id/addedit_btndecrement"
		    style="@style/AddEdit_Widget"
		    android:layout_width="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:layout_weight="0.1"
		    android:focusable="false"
		    android:text="-" />
        
		<EditText
		    android:id="@+id/addedit_txtQuantity"
		    style="@style/AddEdit_Widget"
		    android:layout_width="wrap_content"
		    android:minWidth="90dp"
		    android:layout_weight="0.4"
		    android:layout_alignParentTop="true"
		    android:inputType="numberDecimal" />
		
		<Button
		    android:id="@+id/addedit_btnIncrement"
		    style="@style/AddEdit_Widget"
		    android:layout_width="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_weight="0.1"
		    android:layout_toLeftOf="@+id/addedit_units"
		    android:focusable="false"
		    android:text="+" />

	    <Spinner
	        android:id="@+id/addedit_units"
		    style="@style/AddEdit_Widget"
	        android:layout_width="wrap_content"
		    android:layout_weight="0.4"
	        android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true" />
	    		
	</LinearLayout>

	<TextView
	    android:id="@+id/addedit_labelPrice"
	    style="@style/AddEdit_TextViewStyle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/addedit_updowncontrol"
	    android:layout_marginBottom="2dp"
	    android:text="@string/addedit_price" />

	<TextView
	    android:id="@+id/addedit_labelTotal"
	    style="@style/AddEdit_TextViewStyle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/addedit_updowncontrol"
	    android:layout_toRightOf="@+id/addedit_labelPrice"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="2dp"
	    android:gravity="right|center_vertical"
	    android:text="Total: $39.99" />
	
	<LinearLayout
       android:id="@+id/layout_price"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/addedit_labelPrice"
       android:layout_marginBottom="5dp" 
       android:gravity="center_vertical"
  	   android:orientation="horizontal">
		
		<EditText
		    android:id="@+id/addedit_editprice"
		    style="@style/AddEdit_Widget"
		    android:layout_width="0dip"
		    android:layout_alignParentLeft="true"
		    android:layout_weight="1"
		    android:layout_gravity="center_vertical"
		    android:gravity="left|center_vertical"
		    android:inputType="numberDecimal" />
		
		<CheckBox
		    android:id="@+id/addedit_AskLater"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_weight="1"
		    android:layout_gravity="center_vertical"
		    android:gravity="left|center_vertical"
		    android:text="@string/addedit_askLater" />
		
		<ImageButton
		    android:id="@+id/addedit_asklater_help"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:src="@drawable/help" 
		    android:background="@color/app_button_background" />

	</LinearLayout>
		
	<TextView
	    android:id="@+id/textView4"
	    style="@style/AddEdit_TextViewStyle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/layout_price"
	    android:layout_marginBottom="2dp"
	    android:text="@string/addedit_category" />
		    
	<Spinner
	    android:id="@+id/addedit_spinCategories"
	    style="@style/AddEdit_Widget"
	    android:layout_width="match_parent"
	    android:layout_below="@+id/textView4"
	    android:layout_marginBottom="5dp" />

	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/addedit_spinCategories"
	    android:gravity="right"
	    android:layout_marginTop="10dp">

		<Button
		    android:id="@+id/addedit_btnContinue"
		    style="@style/App_TextButtonStyle"
		    android:text="@string/addedit_Continue" />

		<Button
		    android:id="@+id/addedit_btnDone"
		    style="@style/App_TextButtonStyle"
		    android:text="@string/addedit_Done" />
		
		<Button
		    android:id="@+id/addedit_btnCancel"
		    style="@style/App_TextButtonStyle"
		    android:text="@string/Cancel" />
		
	</LinearLayout>

</RelativeLayout>