<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemlist_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="5dip"
    android:paddingBottom="5dip" >

    <TextView
        android:id="@+id/itemlist_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        style="@style/ItemList_TextAppearance.PendingItem.Small"
        android:text="Item Text" />

    <TextView
        android:id="@+id/itemlist_quantity"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemlist_name"
        android:gravity="left|center_vertical"
        android:text="Quantity"
		style="@style/ItemsList_TextAppearance.Quantity" />

    <TextView
        android:id="@+id/itemlist_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemlist_name"
        android:layout_toRightOf="@+id/itemlist_quantity"
        android:gravity="left|center_vertical"
        android:text="Price" 
        style="@style/ItemsList_TextAppearance.Price" />

    <TextView
        android:id="@+id/itemlist_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemlist_name"
        android:layout_toRightOf="@+id/itemlist_price"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="Total" 
        style="@style/ItemsList_TextAppearance.Total" />
    
</RelativeLayout>