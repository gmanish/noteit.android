<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_itemslist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/application_background_normal"
    android:orientation="vertical" >

    <com.geekjamboree.noteit.ExpandableLVRightIndicator
        android:id="@+android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@color/listitem_group_indicator"
        android:childDivider="@drawable/listview_item_separator"
        android:divider="@drawable/listview_group_separator"
        android:dividerHeight="2px" />

	<ImageView
	    android:layout_width="fill_parent"
	    android:layout_height="4dip"
	    android:background="@drawable/application_statusbar_border" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:background="@drawable/application_statusbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bottom_remaining"
            style="@style/ItemList_TextAppearance.Footer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="10dip"
            android:text="Remaining: "
            android:textAppearance="@style/ItemList_TextAppearance.Footer" />

        <TextView
            android:id="@+id/bottom_total"
            style="@style/ItemList_TextAppearance.Footer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="10dip"
            android:text="Total: "
            android:textAppearance="@style/ItemList_TextAppearance.Footer" />
    </LinearLayout>
		
    <LinearLayout 
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dip">
        
        <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:padding="10dp"
	        android:text="@string/empty_shoppingitems" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/add" />
        
    </LinearLayout>

</LinearLayout>