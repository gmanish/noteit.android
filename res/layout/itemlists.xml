<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <ExpandableListView
        android:id="@+android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@color/listview_selector"
        android:background="@drawable/listitem_background_normal"/>
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        style="@style/GradientBackground">
        
        <ImageButton
	        android:id="@+id/button_itemlist_add"
	        android:src="@android:drawable/ic_menu_add" 
	        style="@style/NoteitButtonStyle"/>

        <ImageButton
            android:id="@+id/button_itemlist_edit"
            android:src="@android:drawable/ic_menu_edit" 
            style="@style/NoteitButtonStyle"/>
        
	    <ImageButton
	        android:id="@+id/button_itemlist_delete"
	        android:src="@android:drawable/ic_menu_delete" 
	        style="@style/NoteitButtonStyle"/>
	    
	    <ImageButton
	        android:id="@+id/button_itemlist_preferences"
	        android:src="@android:drawable/ic_menu_preferences" 
	        style="@style/NoteitButtonStyle"/>
	    
    </LinearLayout>
    
</LinearLayout>