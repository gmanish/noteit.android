<resources>

    <style name="App_ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
	    <item name="android:background">@color/theme_offwhite_toolbar_background</item>
	</style>
	
	<style name="App_TitleBackground">
		<item name="android:background">@color/theme_offwhite_header_background</item>
    </style>

	<style name="ListView_GroupTextAppearance" parent="@android:style/TextAppearance.Small">
	    <item name="android:textSize">13sp</item>
	</style>
	
    <style name="App_Theme" parent="android:Theme">
    	<item name="android:windowTitleSize">30dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/App_TitleBackground</item>
     </style>

	<style name="Theme.AppCustomDialog" parent="android:style/Theme.Dialog">
	    <item name="android:windowBackground">@drawable/filled_roundededges_box</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">#000000</item>
    </style>

