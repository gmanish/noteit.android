<resources>
    <style name="GradientBackground" parent="android:Theme.Holo">
        <item name="android:background">@drawable/application_background_normal</item>
    </style>
    <style name="NoteitButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@drawable/application_background_normal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
	</style>
	<style name="CustomWindowTitleBackground">
		<item name="android:background">@drawable/application_background_normal</item>
    </style>
    <style name="CustomWindowTitleFont">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CustomTheme" parent="android:Theme">
    	<item name="android:windowTitleSize">30dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
