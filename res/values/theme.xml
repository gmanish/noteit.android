<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- #67593A -->
    <color name="noteit_trademark_dark">#5a4d31</color>
    <color name="noteit_trademark_light">#fcd42a</color>
    <color name="noteit_header_textcolor">#FDFDFD</color>
    
    <style name="App_Button" parent="@style/NI_ButtonBase">
        <item name="android:minWidth">90dip</item>
        <item name="android:minHeight">40dip</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="App_ImageButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:minWidth">32dip</item>
        <item name="android:background">@color/app_button_background</item>
    </style>
    	
    <style name="HyperLink_ButtonStyle" parent="@style/App_ImageButtonStyle">
        <item name="android:textSize">12sp</item>
    	<item name="android:textColor">#0000C0</item>  
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@android:color/transparent</item>
    </style>
    
	<style name="TextAppearance.TradeMarkDark" parent="@android:style/TextAppearance">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@color/noteit_trademark_dark</item>
    </style>
	
	<style name="TextAppearance.TradeMarkDark.Small" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@color/noteit_trademark_dark</item>
    </style>
	
	<!-- Theme Definitions  --> 	
    <style name="NI_AppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
</resources>