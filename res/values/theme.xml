<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="noteit_trademark_dark">#67593A</color>
    <color name="noteit_trademark_light">#E7C681</color>
    
    <style name="App_ButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">center</item>
	    <item name="android:background">@color/app_button_background</item>
	</style>
	
	<style name="App_TextButtonStyle">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:background">@drawable/filled_roundededges_nostroke</item>
		<item name="android:textColor">#808080</item>
	</style>

	<style name="App_EditTextStyle">
        <item name="android:background">@drawable/filled_roundededges_box_dark</item>
        <item name="android:textColor">#808080</item>
	    <item name="android:layout_height">45dip</item>
	</style>
	
	<style name="TextAppearance.TradeMarkDark" parent="@android:style/TextAppearance">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@color/noteit_trademark_dark</item>
    </style>
	
	<style name="TextAppearance.TradeMarkLight" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@color/noteit_trademark_light</item>
	    <item name="android:textColor">#808080</item>
    </style>
   
	<style name="TextAppearance.TradeMarkDark.Small" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@color/noteit_trademark_dark</item>
    </style>
	
	<style name="TextAppearance.TradeMarkLight.Small" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@color/noteit_trademark_light</item>
	    <item name="android:textColor">#808080</item>
    </style>

	<!-- Theme Definitions  --> 	
    <style name="NI_AppTheme" parent="android:Theme">
 		<item name="android:windowTitleSize">40dip</item>
    </style>
    
</resources>