<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- #67593A -->
    <color name="noteit_trademark_dark">#483e29</color>
    <color name="noteit_trademark_light">#fcd42a</color>
    <color name="noteit_header_textcolor">#FDFDFD</color>
    
    <style name="App_ButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:gravity">center</item>
	</style>
	
    <style name="HyperLink_ButtonStyle" parent="@style/App_ButtonStyle">
        <item name="android:textSize">12sp</item>
    	<item name="android:textColor">#0000C0</item>  
    </style>
    
	<style name="App_TextButtonStyle">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:background">@drawable/filled_roundededges_nostroke</item>
		<item name="android:textColor">#808080</item>
	</style>

	<style name="App_EditTextStyle">
        <item name="android:background">@drawable/filled_roundededges_box_dark</item>
        <item name="android:textColor">#808080</item>
	    <item name="android:layout_height">45dip</item>
	</style>
	
	<style name="App_CustomDialog" parent="android:style/Theme.Dialog">
	    <!-- 
 	    <item name="android:windowBackground">@drawable/filled_roundededges_box_dark</item>
 	     -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>
	
	<style name="TextAppearance.TradeMarkDark" parent="@android:style/TextAppearance">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@color/noteit_trademark_dark</item>
    </style>
	
	<style name="TextAppearance.TradeMarkLight" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@color/noteit_trademark_light</item>
	    <item name="android:textColor">#808080</item>
    </style>
   
	<style name="TextAppearance.TradeMarkDark.Small" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@color/noteit_trademark_dark</item>
    </style>
	
	<style name="TextAppearance.TradeMarkLight.Small" parent="@android:style/TextAppearance.Small">
	    <item name="android:background">@color/noteit_trademark_light</item>
	    <item name="android:textColor">#808080</item>
    </style>

	<!-- Theme Definitions  --> 	
    <style name="NI_AppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
</resources>