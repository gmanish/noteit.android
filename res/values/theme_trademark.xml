	    <item name="android:textColor">#000000</item>
	</style>
	
	<style name="App_TipsBackground_Trademark">
	    <item name="android:background">@drawable/application_tips_trademark</item>
	</style>

	<!-- Dark Text Colors  -->
	<color name="TextColor_Primary_Trademark">@color/textcolor_primary_trademark</color>
	<color name="TextColor_Secondary_Trademark">#665839</color>
	
	<!-- Light Text Colors  -->
	<color name="TextColor_Primary_Trademark_Light">#AAAAAA</color>
				
