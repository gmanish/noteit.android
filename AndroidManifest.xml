<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geekjamboree.noteit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="7" 
        android:targetSdkVersion="15"/>
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
 
    <application
        android:icon="@drawable/ic_launcher_noteit1"
        android:label="@string/app_name" 
        android:theme="@style/NI_AppTheme.Dark"
        android:name="NoteItApplication">
        <activity android:name="SplashScreen" android:theme="@attr/NI_Splash_Style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="LoginActivity"></activity>
        <activity android:name="DashBoardActivity"></activity>
        <activity android:name="ShoppingListActivity"></activity>
        <activity android:name="RegisterActivity"></activity>
        <activity android:name="MainPreferenceActivity"></activity>
        <activity android:name="ItemListActivity"></activity>
        <activity android:name="CategoryListActivity"></activity>
        <activity android:name="AddEditItemActivity"></activity>
        <activity android:name="ReportMenuActivity"></activity>
        <activity android:name="ReportActivity"></activity>
        <activity android:name="ReportCategoryChart"></activity>
   	 	<activity 
			android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>